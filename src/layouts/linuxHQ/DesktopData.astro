---
import "@css/global-styles.css";

const desktop_name = Astro.props.desktop_name;
const desktop_title = Astro.props.desktop_title;
const generalinfo_desktop_category = Astro.props.generalinfo_desktop_category;
const generalinfo_desktop_toolkit = Astro.props.generalinfo_desktop_toolkit;
const generalinfo_distros_that_feature =
  Astro.props.generalinfo_distros_that_feature;

const link_homepage = Astro.props.link_homepage;
// the idea is to the code ... labeled code in CASE its not on github/gitlabs
const link_code = Astro.props.links_code;

const install_arch = Astro.props.install_arch;
const install_fedora = Astro.props.install_fedora;
const install_opensuse_reference = Astro.props.install_opensuse_reference;
const install_opensuse_tw_repo = Astro.props.install_opensuse_tw_repo;
const install_ubuntu = Astro.props.install_ubuntu;
const requirements_hdd_space = Astro.props.requirements_hdd_space;
const requirements_memory = Astro.props.requirements_memory;
const requirements_processor = Astro.props.requirements_processor;
const screenshot_distro = Astro.props.screenshot_distro;
const screenshot_src = Astro.props.screenshot_src;
const screenshot_thumbnail = Astro.props.thumbnail;
const version_arch = Astro.props.version_arch;
const version_debian_buster = Astro.props.version_debian_buster;
const version_debian_bullseye = Astro.props.version_debian_bullseye;
const version_debian_bookwoom = Astro.props.version_debian_bookworm;
const version_fedora_40 = Astro.props.version_fedora_40;
const version_fedora_41 = Astro.props.version_fedora_41;
const latest_version = Astro.props.version_latest_version;
const version_opensuse_leap156 = Astro.props.version_leap156;
const version_opensuse_tumbleweed = Astro.props.version_tumblewood;
const version_solus = Astro.props.version_solus;
const version_ubuntu_focal = Astro.props.ubuntu_focal;
const version_ubuntu_jammy = Astro.props.ubuntu_jammy;
const version_ubuntu_lunar = Astro.props.ubuntu_lunar;
const version_linuxmint_20 = Astro.props.linuxmint_20;
const version_linuxmint_201 = Astro.props.linuxmint_201;
const version_linuxmint_202 = Astro.props.linuxmint_202;
const version_linuxmint_203 = Astro.props.linuxmint_203;
const version_linuxmint_21 = Astro.props.linuxmint_21;
const version_linuxmint_211 = Astro.props.linuxmint_211;
const version_linuxmint_212 = Astro.props.linuxmint_212;
const version_linuxmint_213 = Astro.props.linuxmint_213;
const version_linuxmint_22 = Astro.props.linuxmint_22;
const version_linuxmint_221 = Astro.props.linuxmint_221;
const version_neon = Astro.props.version_neon;
const info_updated = Astro.props.info_updated;
---

<div class="desktop_container">
  <div class="desktop_title">{desktop_title}</div>
  <div class="info_and_screenshot_container">
    <div class="generalinfo">
      <div><span class="fw-bold">Desktop Hompage: </span>{link_homepage}</div>
      <div>
        <span class="fw-bold">Source Code/Issue Tracker: </span>{link_code}
      </div>

      <div>
        <span class="fw-bold">Desktop Category: </span>{
          generalinfo_desktop_category
        }
      </div>
      <div>
        <span class="fw-bold">Toolkit/WM Name: </span>{
          generalinfo_desktop_toolkit
        }
      </div>

      <div>
        Distros that Feature {desktop_title}: {generalinfo_distros_that_feature}
      </div>
    </div>

    <div class="screenshot">
      {screenshot_thumbnail}
    </div>
  </div>

  <div>
    <span class="fw-bold">Last Date Info was updated: </span>{info_updated}
  </div>

  <div><span class="fw-bold">Latest Version: </span>{latest_version}</div>
  <div class="versions_container">
    <div class="sub_version_container">Arch Version: {version_arch}</div>

    <!-- Debian -->
    <div class="sub_version_container">
      <div>Buster Version: {version_debian_buster}</div>
      <div>Bullseye Version: {version_debian_bullseye}</div>
      <div>Bookworm Version: {version_debian_bookwoom}</div>
    </div>
    <br />

    <!-- Fedora  -->
    <div class="sub_version_container">
      <div>Fedora 40 Version: {version_fedora_40}</div>
      <div>Fedora 41 Version: {version_fedora_41}</div>
    </div>

    <!-- OpenSUSE -->
    <div class="sub_version_container">
      <div>Leap 15.6 Version:</div>
      <div>Tumbleweed Version:</div>
    </div>
    <div class="sub_version_container">Solus Version: {version_solus}</div>

    <div class="sub_version_container">
      <div class="sub_version_container">
        Ubuntu Based Versions
        <div>Focal Version:</div>
        <div>Jammy Version:</div>
        <div>Lunar Version:</div>
      </div>

      <div class="sub_version_container">
        Linux Mint Versions
        <div>Linux Mint 20.0: {version_linuxmint_20}</div>
        <div>Linux Mint 20.1: {version_linuxmint_201}</div>
        <div>Linux Mint 20.2: {version_linuxmint_202}</div>
        <div>Linux Mint 21.0: {version_linuxmint_21}</div>
        <div>Linux Mint 21.1: {version_linuxmint_211}</div>
        <div>Linux Mint 21.2: {version_linuxmint_212}</div>
        <div>Linux Mint 21.3: {version_linuxmint_213}</div>
        <div>Linux Mint 22.0: {version_linuxmint_22}</div>
        <div>Linux Mint 22.1: {version_linuxmint_221}</div>
      </div>
    </div>
  </div>

  <div class="sub_section_container">
    <div>Installing</div>
    <div>Arch: {install_arch}</div>
    <div>Fedora: {install_fedora}</div>
    <div>OpenSUSE Tumbleweed: {install_opensuse_tw_repo}</div>
    <div>Ubuntu: {install_ubuntu}</div>
  </div>
</div>

<style lang="scss">
  .desktop_container,
  .version_container {
    padding: 0 1rem;
    line-height: 1.7rem;
  }
  .sub_section_container {
    outline: 1px #333333 solid;
    margin: 2rem 1rem;
    padding: 1rem;
  }
  .desktop_container {
    .info_and_screenshot_container {
      display: flex;
    }

    .versions_container {
      display: flex;
      flex-flow: column wrap;
      justify-content: space-evenly;
    }
    .versions_container,
    .linuxmint_version_container {
      margin: 2rem 0;

      .ubuntu_version_container {
        display: flex;
        flex-flow: column wrap;

        .linuxmint_version_container {
        }
      }
    }
  }

  .desktop_title {
    font-size: 2rem;
    font-weight: 800;
    margin: 2rem 0;
  }
</style>
