const distro_title = "Linux Mint";

const link_homepage = "https://www.linuxmint.com";
const link_forum = "https://forums.linuxmint.com/";
const link_download = "https://www.linuxmint.com/download.php";
const link_mydistro_page = "http://xmetal.x10.mx/linuxHQ/distros/";

const moreinfo_desktops = "Mate, XFCE, Cinnamon";
const moreinfo_featured = "yes";
const moreinfo_releasecycle = "Follows Ubuntu Long Term Support releases";
const moreinfo_similar_distros = "";
const moreinfo_target_audience = "Any/New Users";
const moreinfo_distro_type = "LTS - Long Term Support";

const screenshot_src =
	"/src/pages/linuxHQ/graphics/distros/ubuntu_based/mint.png";

import screenshot_thumbnail from "/src/pages/linuxHQ/graphics/distros/ubuntu_based/thumbnails/mint-small.png";

const screenshot_desktop = "Cinnamon";
const screenshot_icon = "Mint-Y";
const screenshot_theme = "Mint-Y";

