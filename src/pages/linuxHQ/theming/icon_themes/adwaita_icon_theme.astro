const generalinfo_icon_category = "Icon Theme";
const generalinfo_icon_toolkit = "GTK2, GTK3";
const generalinfo_distros_that_feature = "Fedora, Ubuntu, Arch";

const install_arch = "sudo pacman -S adwaita-icon-theme";
