---
import IconData from "@layouts/linuxHQ/data/IconData.astro";
import LinuxIconTemplate from "@templates/linuxhq/linux-theme-template.astro";

const icon_theme_name = "yaru";
const icon_theme_title = "Yaru Icon Theme";

const link_code = "https://github.com/ubuntu/yaru";
const theme_homepage = "https://github.com/ubuntu/yaru";

const generalinfo_icon_category = "Icon Theme";
const generalinfo_icon_toolkit = "GTK3";
const generalinfo_distros_that_feature = "Ubuntu";

const install_arch = "sudo pacman -S yaru-icon-theme";
const install_fedora = "sudo dnf install yaru-icon-theme";
const install_opensuse_reference = "";
const install_opensuse_tw_repo = "";
const install_mint = "sudo apt install yaru-icon-theme";
const install_ubuntu = "sudo apt install yaru-icon-theme";

const screenshot_distro = "Ubuntu";
const screenshot_src = "ubuntu/yaru-icon-theme.png";
