    install_opensuse_tw_repo={install_opensuse_tw_repo}
    install_ubuntu={install_ubuntu}
    install_debian_bullseye={install_debian_bullseye}
    install_debian_bookworm={install_debian_bookworm}
    install_debian_trixie={install_debian_trixie}
    requirements_hdd_space={requirements_hdd_space}
