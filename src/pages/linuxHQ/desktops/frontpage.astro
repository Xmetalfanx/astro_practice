---
import LinuxDesktopTemplate from "@templates/linuxhq/linux-desktop-template.astro";
import { faUbuntu, faFedora, faDebian, faKubuntu, faOpensuse, faManjaro, faXubuntu, faLinux, faSolus, faArchlinux, faPopos } from '@fortawesome/free-brands-svg-icons';
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';

const desktops = [
  {
    name: "GNOME",
    icon: "/assets/icons/gnome.png",
    description: "GNOME is a desktop environment composed of free and open-source software that runs on Linux and most BSD derivatives.",
    homepage: "https://www.gnome.org/",
    commonDistros: [
      { name: "Ubuntu", link: "https://ubuntu.com/" },
      { name: "Fedora", link: "https://getfedora.org/" },
      { name: "Debian", link: "https://www.debian.org/" }
    ],
    screenshot: "/assets/screenshots/gnome.png"
  },
  {
    name: "KDE Plasma",
    icon: "/assets/icons/kde.png",
    description: "KDE Plasma is a modern desktop environment designed to be powerful, flexible, and customizable.",
    homepage: "https://kde.org/plasma-desktop",
    commonDistros: [
      { name: "Kubuntu", link: "https://kubuntu.org/" },
      { name: "openSUSE", link: "https://www.opensuse.org/" },
      { name: "Manjaro", link: "https://manjaro.org/" }
    ],
    screenshot: "/assets/screenshots/kde.png"
  },
  {
    name: "XFCE",
    icon: "/assets/icons/xfce.png",
    description: "XFCE is a lightweight desktop environment for UNIX-like operating systems. It aims to be fast and low on system resources.",
    homepage: "https://xfce.org/",
    commonDistros: [
      { name: "Xubuntu", link: "https://xubuntu.org/" },
      { name: "Linux Mint", link: "https://linuxmint.com/" },
      { name: "MX Linux", link: "https://mxlinux.org/" }
    ],
    screenshot: "/assets/screenshots/xfce.png"
  },
  {
    name: "Cinnamon",
    icon: "/assets/icons/cinnamon.png",
    description: "Cinnamon is a Linux desktop environment that provides advanced innovative features and a traditional user experience.",
    homepage: "https://linuxmint.com/",
    commonDistros: [
      { name: "Linux Mint", link: "https://linuxmint.com/" },
      { name: "Fedora", link: "https://getfedora.org/" },
      { name: "Manjaro", link: "https://manjaro.org/" }
    ],
    screenshot: "/assets/screenshots/cinnamon.png"
  },
  {
    name: "LXQt",
    icon: "/assets/icons/lxqt.png",
    description: "LXQt is a lightweight, modular, fast, and user-friendly desktop environment.",
    homepage: "https://lxqt-project.org/",
    commonDistros: [
      { name: "Lubuntu", link: "https://lubuntu.me/" },
      { name: "SparkyLinux", link: "https://sparkylinux.org/" },
      { name: "Manjaro", link: "https://manjaro.org/" }
    ],
    screenshot: "/assets/screenshots/lxqt.png"
  },
  {
    name: "Budgie",
    icon: "/assets/icons/budgie.png",
    description: "Budgie is a desktop environment that focuses on simplicity and elegance. It is developed by the Solus project.",
    homepage: "https://getsol.us/home/",
    commonDistros: [
      { name: "Solus", link: "https://getsol.us/home/" },
      { name: "Ubuntu Budgie", link: "https://ubuntubudgie.org/" },
      { name: "Arch Linux", link: "https://archlinux.org/" }
    ],
    screenshot: "/assets/screenshots/budgie.png"
  },
  {
    name: "Cosmic",
    icon: "/assets/icons/cosmic.png",
    description: "Cosmic is a modern desktop environment developed by System76, designed to be intuitive and customizable.",
    homepage: "https://pop.system76.com/",
    commonDistros: [
      { name: "Pop!_OS", link: "https://pop.system76.com/" }
    ],
    screenshot: "/assets/screenshots/cosmic.png"
  }
];

const distroIcons = {
  "Ubuntu": faUbuntu,
  "Fedora": faFedora,
  "Debian": faDebian,
  "Kubuntu": faKubuntu,
  "openSUSE": faOpensuse,
  "Manjaro": faManjaro,
  "Xubuntu": faXubuntu,
  "Linux Mint": faLinux,
  "MX Linux": faLinux,
  "Solus": faSolus,
  "Arch Linux": faArchlinux,
  "Pop!_OS": faPopos,
  "Lubuntu": faLinux,
  "SparkyLinux": faLinux,
  "Ubuntu Budgie": faUbuntu
};

---

<LinuxDesktopTemplate>
  <div class="desktop_container">
    {
      desktops.map((desktop) => (
        <div key={desktop.name} class="desktop-card">
          <div class="icon_and_title">
            <img class="icon" src={desktop.icon} alt={`${desktop.name} icon`} />
            <div class="title">{desktop.name}</div>
          </div>

          <p>{desktop.description}</p>
          <a class="homepage" href={desktop.homepage} target="_blank">
            Homepage
          </a>
          <h3>Common Distros:</h3>
          <ul>
            {desktop.commonDistros.map((commonDistro) => (
              <li key={commonDistro.name}>
                <a href={commonDistro.link} target="_blank">
                  <FontAwesomeIcon icon={distroIcons[commonDistro.name]} /> {commonDistro.name}
                </a>
              </li>
            ))}
          </ul>
          <img src={desktop.screenshot} alt={`${desktop.name} screenshot`} />
        </div>
      ))
    }
  </div>
</LinuxDesktopTemplate>

<style>
 .desktop_container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
 }
 
 
 .desktop-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 1rem;
    padding: 1rem;
    border-radius: 5px;
    outline: 1px solid #333;
    max-width: 300px;
  }

  .icon_and_title {
    display: flex;
    align-items: center;
    font-size: 1.25rem;
    margin: 2rem 0;

    .icon {
      width: 50px;
      height: 50px;
      margin-right: 1rem;
    }
    .title {
      font-weight: bold;
    }
  }

  ul {
    list-style-type: none;
    padding: 0;
    display: flex;
    margin: 1rem 0;

    li {
      margin-right: 1rem;
    }
  }

  .homepage {
    margin: 1rem 0;
    font-weight: bold;
  }
</style>
