  },
  {
    name: "Cinnamon",
    icon: "/assets/icons/cinnamon.png",
    description:
      "Cinnamon is a Linux desktop environment that provides advanced innovative features and a traditional user experience.",
    homepage: "https://linuxmint.com/",
    commonDistros: [
      { name: "Linux Mint", link: "https://linuxmint.com/" },
      { name: "Fedora", link: "https://getfedora.org/" },
      { name: "Manjaro", link: "https://manjaro.org/" },
    ],
    screenshot: "/src/pages/linuxHQ/graphics/desktops/screenshots/cinnamon.png",
    screenshot_tn:
      "/src/pages/linuxHQ/graphics/desktops/screenshots/thumbnails/cinnamon-small.png",
    screenshot_distro: "Linux Mint 22.x",
  },
  {
    name: "Cosmic",
    icon: "/assets/icons/cosmic.png",
