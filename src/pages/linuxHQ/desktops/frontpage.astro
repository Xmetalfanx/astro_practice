---
import LinuxDesktopTemplate from "@templates/linuxhq/linux-desktop-template.astro";
import { Image } from "astro:assets";

const desktopicon_path="/src/pages/linuxHQ/graphics/desktops/icons"

const desktops = [
  {
    name: "Budgie",
    icon: "/src/pages/linuxHQ/graphics/desktops/icons/budgie.svg",
    description: "Budgie is a desktop environment that focuses on simplicity and elegance. It is developed by the Solus project.",
    homepage: "https://getsol.us/home/",
    commonDistros: [
      { name: "Solus", link: "https://getsol.us/home/" },
      { name: "Ubuntu Budgie", link: "https://ubuntubudgie.org/" },
      { name: "Arch Linux", link: "https://archlinux.org/" }
    ],
    screenshot: "/src/pages/linuxHQ/graphics/desktops/screenshot/budgie.avif"
  },
  {
    name: "Cinnamon",
    icon: "/assets/icons/cinnamon.png",
    description: "Cinnamon is a Linux desktop environment that provides advanced innovative features and a traditional user experience.",
    homepage: "https://linuxmint.com/",
    commonDistros: [
      { name: "Linux Mint", link: "https://linuxmint.com/" },
      { name: "Fedora", link: "https://getfedora.org/" },
      { name: "Manjaro", link: "https://manjaro.org/" }
    ],
    screenshot: "/src/pages/linuxHQ/graphics/desktops/screenshot/cinnamon.png"
  },
  {
    name: "Cosmic",
    icon: "/assets/icons/cosmic.png",
    description: "Cosmic is a modern desktop environment developed by System76, designed to be intuitive and customizable.",
    homepage: "https://pop.system76.com/",
    commonDistros: [
      { name: "Pop!_OS", link: "https://pop.system76.com/" }
    ],
    screenshot: "/assets/screenshots/cosmic.png"
  },
  {
    name: "GNOME",
    icon: "/src/pages/linuxHQ/graphics/desktops/icons/gnome.svg",
    description: "GNOME is a desktop environment composed of free and open-source software that runs on Linux and most BSD derivatives.",
    homepage: "https://www.gnome.org/",
    commonDistros: [
      { name: "Ubuntu", link: "https://ubuntu.com/" },
      { name: "Fedora", link: "https://getfedora.org/" },
      { name: "Debian", link: "https://www.debian.org/" }
    ],
    screenshot: "/src/pages/linuxHQ/graphics/desktops/screenshot/gnome.png"
  },
  {
    name: "KDE Plasma",
    icon: "/src/pages/linuxHQ/graphics/desktops/icons/plasma.svg",
    description: "KDE Plasma is a modern desktop environment designed to be powerful, flexible, and customizable.",
    homepage: "https://kde.org/plasma-desktop",
    commonDistros: [
      { name: "Kubuntu", link: "https://kubuntu.org/" },
      { name: "openSUSE", link: "https://www.opensuse.org/" },
      { name: "Manjaro", link: "https://manjaro.org/" }
    ],
    screenshot: "/src/pages/linuxHQ/graphics/desktops/screenshot/plasma.png"
  },
  {
    name: "LXQt",
    icon: "/src/pages/linuxHQ/graphics/desktops/icons/lxqt.png",
    description: "LXQt is a lightweight, modular, fast, and user-friendly desktop environment.",
    homepage: "https://lxqt-project.org/",
    commonDistros: [
      { name: "Lubuntu", link: "https://lubuntu.me/" },
      { name: "SparkyLinux", link: "https://sparkylinux.org/" },
      { name: "Manjaro", link: "https://manjaro.org/" }
    ],
    screenshot: "/src/pages/linuxHQ/graphics/desktops/screenshot/lxqt.png"
  },
  {
    name: "MATE",
    icon: "/src/pages/linuxHQ/graphics/desktops/icons/mate.png",
    description: "MATE is a desktop environment that continues the legacy of GNOME 2, providing a traditional desktop experience.",
    homepage: "https://mate-desktop.org/",
    commonDistros: [
      { name: "Ubuntu MATE", link: "https://ubuntu-mate.org/" },
      { name: "Linux Mint", link: "https://linuxmint.com/" },
      { name: "Fedora", link: "https://getfedora.org/" }
    ],
    screenshot: "/src/pages/linuxHQ/graphics/desktops/screenshot/mate-1.26_fedora.png"
  },
  {
    name: "Pantheon",
    icon: "/src/pages/linuxHQ/graphics/desktops/icons/pantheon.svg",
    description: "Pantheon is the desktop environment of elementary OS, known for its simplicity, elegance, and user-friendly design.",
    homepage: "https://elementary.io/",
    commonDistros: [
      { name: "elementary OS", link: "https://elementary.io/" }
    ],
    screenshot: "/src/pages/linuxHQ/graphics/desktops/screenshot/pantheon.png"
  },
  {
    name: "XFCE",
    icon: "/src/pages/linuxHQ/graphics/desktops/icons/xfce.svg",
    description: "XFCE is a lightweight desktop environment for UNIX-like operating systems. It aims to be fast and low on system resources.",
    homepage: "https://xfce.org/",
    commonDistros: [
      { name: "Xubuntu", link: "https://xubuntu.org/" },
      { name: "Linux Mint", link: "https://linuxmint.com/" },
      { name: "MX Linux", link: "https://mxlinux.org/" }
    ],
    screenshot: "/src/pages/linuxHQ/graphics/desktops/screenshot/xfce.png"
  }
];

---

<LinuxDesktopTemplate>
  <div class="desktop_container">
    {
      desktops.map((desktop) => (
        <div key={desktop.name} class="desktop-card">
          <div class="icon_and_title">
            <img class="icon" src={desktop.icon} alt={`${desktop.name} icon`} />
            <div class="title">{desktop.name}</div>
          </div>

          <p>{desktop.description}</p>
          <a class="homepage" href={desktop.homepage} target="_blank">
            Homepage
          </a>
          <h3>Common Distros:</h3>
          <ul>
            {desktop.commonDistros.map((distro) => (
              <li key={distro.name}>
                <a href={distro.link} target="_blank">{distro.name}</a>
              </li>
            ))}
          </ul>
          <Image class="screenshot" src={desktop.screenshot} alt={`${desktop.name} screenshot`} width={800} height={450} />
        </div>
      ))
    }
  </div>
</LinuxDesktopTemplate>

<style>
 .desktop_container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
 }

 .desktop-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 1rem;
    padding: 1rem;
    border-radius: 5px;
    outline: 1px solid #333;
    max-width: 30rem;
    width: 100%;
  }

  .icon_and_title {
    display: flex;
    align-items: center;
    font-size: 1.25rem;
    margin: 2rem 0;

    .icon {
      width: 50px;
      height: 50px;
      margin-right: 1rem;
    }
    .title {
      font-weight: bold;
    }
  }

  ul {
    list-style-type: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: 1rem 0;

    li {
      margin: 0.5rem;
    }
  }

  .homepage {
    margin: 1rem 0;
    font-weight: bold;
  }

  .screenshot {
    width: 100%;
    border-radius: 5px;
    margin-top: 1rem;
    aspect-ratio: 16 / 9;
    height: auto;
  }

  @media (max-width: 600px) {
    .desktop-card {
      margin: 0.5rem;
      padding: 0.5rem;
    }

    .icon_and_title {
      font-size: 1rem;
      margin: 1rem 0;

      .icon {
        width: 40px;
        height: 40px;
        margin-right: 0.5rem;
      }
    }

    .homepage {
      font-size: 0.9rem;
    }

    .screenshot {
      margin-top: 0.5rem;
    }
  }
</style>
