---

<LinuxBaseTemplate
  title="Linux Desktop Environments"
  keywords="linux, desktop, environments, distros"
  description="A collection of popular Linux desktop environments."
>
  <div slot="linux-main">
    <LinkToMenu />

    <div class="desktop_container">
      {
        desktops.map((desktop) => (
            <div class="icon_and_title">
              {desktop.icon ? (
                <img
                  class="icon"
                  src={desktop.icon.src}
                  alt={`${desktop.name} icon`}
                />
              ) : (
                <div class="icon icon--placeholder">{desktop.name[0]}</div>
              )}
              <div class="title">{desktop.name}</div>
            </div>

            <p>{desktop.description}</p>
            <a class="homepage" href={desktop.homepage} target="_blank">
              Homepage
            </a>
            <h3>Common Distros:</h3>
            <ul>
              {desktop.commonDistros.map((distro) => (
                <li>
                  <a href={distro.link} target="_blank">
                    {distro.name}
                  </a>
                </li>
              ))}
            </ul>
            <div>
              {desktop.screenshot_tn ? (
                <a href={desktop.screenshot?.src} target="_blank">
                  <Image
                    class="screenshot"
                    src={desktop.screenshot_tn}
                    alt={`${desktop.name} screenshot`}
                    width={640}
                    height={400}
                  />
                </a>
              ) : (
                <div class="screenshot screenshot--placeholder">
                  No screenshot available
                </div>
              )}
            </div>

            <div>Screenshot Distro: {desktop.screenshot_distro}</div>
          </div>
        ))
      }
    </div>
  </div>
</LinuxBaseTemplate>

<style lang="scss">
  @use "@scss/base/_index.scss" as *;
  @use "@scss/_misc.scss" as *;

  .desktop_container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;

    @media ($breakpoint-lg) {
      .desktop_container {
        grid-template-columns: repeat(2, minmax(300px, 1fr));
      }
    }

    .desktop-card {
      @include flex($direction: column, $ai: center);
      padding: 1rem;
      border-radius: 5px;
      /* Responsive width using clamp, but grid controls columns */
      width: 100%;

      .icon_and_title {
        @include flex($ai: center);
        font-size: 1.25rem;
        margin: 2rem 0;

        .icon {
          width: 50px;
          height: 50px;
          margin-right: 1rem;
        }
        .title {
          font-weight: bold;
        }
      }

      .homepage {
        margin: 1rem 0;
        font-weight: bold;
      }

      ul {
        @include flex($jc: center);
        list-style-type: none;
        padding: 0;
        margin: 1rem 0;

        li {
          margin: 0.5rem;
        }
      }

      .screenshot {
        aspect-ratio: 16 / 9;
        border-radius: 5px;
        margin-top: 1rem;
        height: auto;
        width: 90%;
      }
    }
  }

  @media ($breakpoint-sm) {
    .desktop-card {
      margin: 0 auto;
      padding: 2rem;
      /* Remove width override, grid handles sizing */
      .icon_and_title {
        font-size: 1rem;
        margin: 1rem 0;

        .icon {
          width: 40px;
          height: 40px;
          margin-right: 0.5rem;
        }
      }

      .homepage {
        font-size: 0.9rem;
      }

      .screenshot {
        margin-top: 0.5rem;
      }
    }
  }
</style>
