  {
    name: "XFCE",
    icon: "/src/pages/linuxHQ/graphics/desktops/icons/xfce.svg",
    description:
      "XFCE is a lightweight desktop environment for UNIX-like operating systems. It aims to be fast and low on system resources.",
    homepage: "https://xfce.org/",
    commonDistros: [
      { name: "Xubuntu", link: "https://xubuntu.org/" },
      { name: "Linux Mint", link: "https://linuxmint.com/" },
      { name: "MX Linux", link: "https://mxlinux.org/" },
    ],
    screenshot: "/src/pages/linuxHQ/graphics/desktops/screenshots/xfce.png",
