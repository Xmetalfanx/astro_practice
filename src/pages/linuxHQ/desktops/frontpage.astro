    homepage: "https://pop.system76.com/",
    commonDistros: [{ name: "Pop!_OS", link: "https://pop.system76.com/" }],
    screenshot: "/assets/screenshots/cosmic.png",
    screenshot_tn:
      "/src/pages/linuxHQ/graphics/desktops/screenshots/thumbnails/cosmic-small.png",
    screenshot_distro: "",
  },
  {
    name: "GNOME",
    icon: "/src/pages/linuxHQ/graphics/desktops/icons/gnome.svg",
