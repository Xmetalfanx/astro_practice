      { name: "Ubuntu Budgie", link: "https://ubuntubudgie.org/" },
      { name: "Arch Linux", link: "https://archlinux.org/" },
    ],
    screenshot: "/src/pages/linuxHQ/graphics/desktops/screenshots/budgie.avif",
    screenshot_tn:
      "/src/pages/linuxHQ/graphics/desktops/screenshots/thumbnails/budgie-small.avif",
