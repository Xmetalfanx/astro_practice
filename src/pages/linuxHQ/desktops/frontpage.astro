      "/src/pages/linuxHQ/graphics/desktops/screenshots/thumbnails/xfce-small.png",
    screenshot_distro: "Xubuntu 24.04",
  },
];
---

<LinuxDesktopTemplate
  title="Linux Desktop Environments"
  keywords="linux, desktop, environments, distros"
  description="A collection of popular Linux desktop environments."
>
  <div class="desktop_container" slot="linux-main">
    {
      desktops.map((desktop) => (
        <div key={desktop.name} class="desktop-card">
          <div class="icon_and_title">
            <img class="icon" src={desktop.icon} alt={`${desktop.name} icon`} />
            <div class="title">{desktop.name}</div>
          </div>

          <p>{desktop.description}</p>
          <a class="homepage" href={desktop.homepage} target="_blank">
            Homepage
          </a>
          <h3>Common Distros:</h3>
          <ul>
            {desktop.commonDistros.map((distro) => (
              <li key={distro.name}>
                <a href={distro.link} target="_blank">
                  {distro.name}
                </a>
              </li>
            ))}
          </ul>
          <a href={desktop.screenshot} target="_blank">
            <Image
              class="screenshot"
              src={desktop.screenshot_tn}
              alt={`${desktop.name} screenshot`}
              width={640}
              height={400}
            />
          </a>
          <div>Screenshot Distro: {desktop.screenshot_distro}</div>
        </div>
      ))
    }
  </div>
</LinuxDesktopTemplate>

<style lang="scss">
  @use "@scss/_mixins.scss" as *;

  .desktop_container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  .desktop-card {
    @include bgcolor-level(2);

    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 1rem;
    padding: 1rem;
    border-radius: 5px;
    outline: 1px solid #333;
    width: clamp(25rem, 30%, 100%); /* Ideal size three distros wide */
  }

  .icon_and_title {
    display: flex;
    align-items: center;
    font-size: 1.25rem;
    margin: 2rem 0;

    .icon {
      width: 50px;
      height: 50px;
      margin-right: 1rem;
    }
    .title {
      font-weight: bold;
    }
  }

  ul {
    list-style-type: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: 1rem 0;

    li {
      margin: 0.5rem;
    }
  }

  .homepage {
    margin: 1rem 0;
    font-weight: bold;
  }

  .screenshot {
    aspect-ratio: 16 / 9;
    border-radius: 5px;
    margin-top: 1rem;
    height: auto;
    width: 100%;
  }

  @media (max-width: 600px) {
    .desktop-card {
      margin: 0.5rem;
      padding: 0.5rem;
    }

    .icon_and_title {
      font-size: 1rem;
      margin: 1rem 0;

      .icon {
        width: 40px;
        height: 40px;
        margin-right: 0.5rem;
      }
    }

    .homepage {
      font-size: 0.9rem;
    }

    .screenshot {
      margin-top: 0.5rem;
    }
  }
</style>
