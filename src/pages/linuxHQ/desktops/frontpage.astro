    screenshot: "/src/pages/linuxHQ/graphics/desktops/screenshots/gnome.png",
    screenshot_tn:
      "/src/pages/linuxHQ/graphics/desktops/screenshots/thumbnails/gnome-small.png",
    screenshot_distro: "Ubuntu 24.04",
  },
  {
    name: "KDE Plasma",
    icon: "/src/pages/linuxHQ/graphics/desktops/icons/plasma.svg",
    description:
      "KDE Plasma is a modern desktop environment designed to be powerful, flexible, and customizable.",
    homepage: "https://kde.org/plasma-desktop",
    commonDistros: [
      { name: "Kubuntu", link: "https://kubuntu.org/" },
      { name: "openSUSE", link: "https://www.opensuse.org/" },
