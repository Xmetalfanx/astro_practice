---
import GlobalFooter from "@layouts/global/global-footer.astro";
import GlobalHeadtag from "@layouts/global/global-headtag.astro";
import DistroSidebar from "@linux_aside/distro_sidebar.astro";
import LinuxTopMenus from "@layouts/linuxHQ/LinuxTopMenus.astro";

const wm_name = "Window Manager Name"; // Replace with actual window manager name
const wm_title = "Window Manager Title"; // Replace with actual window manager title
const wm_homepage = "https://example.com"; // Replace with actual homepage link
const wm_git_repo = "https://github.com/example/repo"; // Replace with actual git repo link
const wm_install_arch = "sudo pacman -S wm-package"; // Replace with actual installation command for Arch
const wm_install_fedora = "sudo dnf install wm-package"; // Replace with actual installation command for Fedora
const wm_install_ubuntu = "sudo apt install wm-package"; // Replace with actual installation command for Ubuntu
const wm_screenshot_src = "path/to/screenshot.png"; // Replace with actual screenshot path
const wm_screenshot_thumbnail = "path/to/thumbnail.png"; // Replace with actual thumbnail path

---

<GlobalHeadtag />

<LinuxTopMenus />

<div class="primary-container">
  <aside>
    <DistroSidebar />
  </aside>
  <main>
    <h1>{wm_title}</h1>
    <p>Homepage: <a href={wm_homepage}>{wm_homepage}</a></p>
    <p>Git Repository: <a href={wm_git_repo}>{wm_git_repo}</a></p>
    <h2>Installation Instructions</h2>
    <ul>
      <li>Arch: {wm_install_arch}</li>
      <li>Fedora: {wm_install_fedora}</li>
      <li>Ubuntu: {wm_install_ubuntu}</li>
    </ul>
    <h2>Screenshots</h2>
    <img src={wm_screenshot_src} alt="{wm_title} Screenshot" />
    <img src={wm_screenshot_thumbnail} alt="{wm_title} Thumbnail" />
  </main>
</div>

<GlobalFooter />
